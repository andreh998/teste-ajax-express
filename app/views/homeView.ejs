    <script>

        $(function() {            
            $("#geraGrafico").click(function() {
                
                var selecao = $("#tipoGrafico").val();
                var tamanho = $("#tamanhoGrafico").val();
                
                $.ajax({             
                    type : 'POST',             
                    url : '/',                    
                    data:{tipoGrafico:selecao, tamanhoGrafico:tamanho},
                    success:function(data){         
                        $('#graficos').empty().html(data);
                    }
                });
            });
        });
        
    </script>
    
</head>
<body>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Adicionar gráfico</button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Novo Gráfico </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <form>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tipo de gráfico:</label>
                        <select id="tipoGrafico" class="form-control">
                            <option value="barras">Barras</option>
                            <option value="linhas">Linhas</option>
                        </select>   
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tamanho do gráfico:</label>
                        <select id="tamanhoGrafico" class="form-control">
                            <option value="200">200x200</option>
                            <option value="400">400x400</option>
                            <option value="600">600x600</option>
                        </select>   
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Dados:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>           
                </div>
            </form>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="geraGrafico" class="btn btn-primary" data-dismiss="modal"> Criar gráfico </button>
            </div>
            
        </div>
    </div>
    </div>

    <div id="graficos"></div>

</body>
</html>