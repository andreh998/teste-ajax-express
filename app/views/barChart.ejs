
    <link rel="stylesheet" href="http://localhost:8000/css/bootstrap.min.css" />
    <script src="http://localhost:8000/js/chart.js/dist/Chart.js"></script>
    
    <div class="col-sm-5">
            <canvas id="myChart" width="<%= tamanho %>" height="<%= tamanho %>"></canvas>
        </div>
        <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['<% for(var i in dados){ %> ' + ' <%= dados[i].nome %>' , '<% } %>'],
                datasets: [{
                    label: 'Vendas por produto',
                    data: ['<% for(var i in dados){ %> ' + ' <%= dados[i].venda %> ' , '<% } %>'],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
        </script>
